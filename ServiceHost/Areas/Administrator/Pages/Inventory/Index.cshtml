@page
@model ServiceHost.Areas.Administrator.Pages.inventory.IndexModel
@{
    ViewData["Title"] = "مدیریت انبار";
}

<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-lg-12">
            <a class="btn btn-primary text-white float-left" href="#showmodal=@Url.Page("./Index","Create")">ایجاد انبار<i class="zmdi zmdi-plus"></i></a>
            <div class="card">
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable text-center">
                            <thead>
                                <tr>
                                    <th>شناسه</th>
                                    <th>محصول</th>
                                    <th>قیمت واحد</th>
                                    <th>وضعیت</th>
                                    <th>موجودی انبار</th>
                                    <th>تاریخ ایجاد</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>شناسه</th>
                                    <th>محصول</th>
                                    <th>قیمت واحد</th>
                                    <th>وضعیت</th>
                                    <th>موجودی انبار</th>
                                    <th>تاریخ ایجاد</th>
                                    <th>عملیات</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model.InventoryList)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td class="w-25">@item.Product</td>
                                        <td>@item.UnitPrice</td>
                                        <td>
                                            @if (item.InStock)
                                            {
                                                <i class="zmdi zmdi-check text-success"></i>
                                            }
                                            else
                                            {
                                                <i class="zmdi zmdi-close text-danger"></i>
                                            }
                                        </td>
                                        <td>@item.CurrentCount</td>
                                        <td>@item.CreateDate</td>
                                        <td>
                                            <a class="btn btn-warning btn-sm btn-round text-white" href="#showmodal=@Url.Page("./Index","Edit",new {id=item.Id})">
                                                ویرایش
                                            </a>

                                            <a class="btn btn-success btn-sm btn-round text-white" href="#showmodal=@Url.Page("./Index","Increase",new {id=item.Id})">
                                                افزایش موجودی
                                            </a>

                                            <a class="btn btn-danger btn-sm btn-round text-white" href="#showmodal=@Url.Page("./Index","Decrease",new {id=item.Id})">
                                                کاهش موجودی
                                            </a>

                                            <a class="btn btn-primary btn-sm btn-round text-white" href="#showmodal=@Url.Page("./Index","Log",new {id=item.Id})">
                                                مشاهده گردش انبار
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Css {
    <link rel="stylesheet" href="~/AdminTheme/assets/plugins/jquery-datatable/dataTables.bootstrap4.min.css">
}

@section Script{
    <!-- Jquery DataTable Plugin Js -->
    <script src="~/AdminTheme/assets/bundles/datatablescripts.bundle.js"></script>
    <script src="~/AdminTheme/assets/plugins/jquery-datatable/buttons/dataTables.buttons.min.js"></script>
    <script src="~/AdminTheme/assets/plugins/jquery-datatable/buttons/buttons.bootstrap4.min.js"></script>
    <script src="~/AdminTheme/assets/plugins/jquery-datatable/buttons/buttons.colVis.min.js"></script>
    <script src="~/AdminTheme/assets/plugins/jquery-datatable/buttons/buttons.flash.min.js"></script>
    <script src="~/AdminTheme/assets/plugins/jquery-datatable/buttons/buttons.html5.min.js"></script>
    <script src="~/AdminTheme/assets/plugins/jquery-datatable/buttons/buttons.print.min.js"></script>
    <script src="~/AdminTheme/assets/js/pages/tables/jquery-datatable.js"></script>
}
