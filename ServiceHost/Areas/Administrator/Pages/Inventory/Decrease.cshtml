@model InventoryManagement.Application.Contracts.Inventory.DecreaseInventory
@{
}

<div class="modal-header">
    <h4 class="title" id="largeModalLabel">کاهش موجودی</h4>
</div>

<form asp-page="./Index" asp-page-handler="Decrease" method="post" data-ajax="true" data-callback="" data-action="Refresh" enctype="multipart/form-data">
    <div class="modal-body">

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Count" class="control-label">تعداد</label>
                    <input type="number" class="form-control" asp-for="Count">
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Description" class="control-label">توضیحات</label>
                    <textarea class="form-control" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="InventoryId" value="@Model.InventoryId"/>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-danger waves-effect waves-light">ثبت</button>
    </div>
</form>