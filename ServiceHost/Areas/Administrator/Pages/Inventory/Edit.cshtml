@model InventoryManagement.Application.Contracts.Inventory.EditInventory
@{
}

<div class="modal-header">
    <h4 class="title" id="largeModalLabel">ویرایش انبار</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit" method="post" data-ajax="true" data-callback="" data-action="Refresh" enctype="multipart/form-data">
    <div class="modal-body">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ProductId" class="control-label">محصول</label>
                    <select class="form-control" asp-for="ProductId" asp-items='new SelectList(Model.Product,"Id","Name")'>
                        <option value="0">انتخاب کنید</option>
                    </select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UnitPrice" class="control-label">قیمت واحد</label>
                    <input type="number" class="form-control" asp-for="UnitPrice">
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id"/>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-warning waves-effect waves-light">ویرایش</button>
    </div>
</form>