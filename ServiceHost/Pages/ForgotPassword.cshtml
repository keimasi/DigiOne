@page
@model ServiceHost.Pages.ForgotPasswordModel
@{
}

<div class="container">
    <div class="row">
        <div class="main-content login_content  col-12 col-md-7 col-lg-5 mx-auto">
            <header class="card-header">
                <h3 class="card-title"><span>بازیابی رمز عبور</span></h3>
            </header>
            <div class="login_box">

                @if (!string.IsNullOrEmpty(Model.ForgotPassMessage))
                {
                    <div class="alert alert-danger">@Model.ForgotPassMessage</div>
                }

                <form method="post">
                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <div class="form-account-title"><span>*</span> نام کاربری</div>
                            <div class="form-account-row">
                                <input class="input_second input_all" type="text" name="username" placeholder=" نام کاربری شما">
                            </div>
                        </div>

                        <div class="col-12 text--center">
                            <button type="submit" class="btn big_btn btn-main-masai">تایید</button>
                        </div>
                        <div class="col-12 footer_login_reg text--center">
                            <p>
                                <a asp-page="/Login">بازگشت به صفحه ورود</a>
                            </p>

                        </div>
                        <div class="col-12 ">
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>