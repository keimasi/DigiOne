@page
@using _0_Framwork.Application
@model ServiceHost.Pages.CartModel
@{
}

<main class="cart-page default space-top-30">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <ul class="order-steps">
                    <li>
                        <a asp-page="/Cart" class="active">
                            <span>سبدخرید</span>
                        </a>
                    </li>
                    <li>
                        <a href="shopping-payment.html">
                            <span>پرداخت</span>
                        </a>
                    </li>
                    <li>
                        <a href="successful-payment.html">
                            <span>اتمام خرید و ارسال</span>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="cart_content col-xl-12 col-lg-12 col-md-12">
                <header class="card-header">
                    <h3 class="card-title"><span>سبد خرید شما</span></h3>
                    @foreach (var item in Model.CartItems.Where(x => x.IsInStock == false))
                    {
                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <span>
                                کالای <strong>@item.Name</strong> در انبار کمتر از تعداد درخواستی  موجود است.
                            </span>
                        </div>
                    }
                </header>
                <div class="table-responsive default">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">عکس</th>
                            <th scope="col">نام محصول</th>
                            <th scope="col">قیمت واحد</th>
                            <th scope="col">تعداد</th>
                            <th scope="col">قیمت نهایی</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.CartItems)
                        {
                            <tr class="cart_item">
                                <td>
                                    <img src="~/Upload/@item.Picture" alt="@item.Name">
                                    <a asp-page-handler="RemoveCartItem" asp-route-id="@item.Id"><i class="fa fa-times" aria-hidden="true"></i></a>
                                </td>
                                <td class="w-50">
                                    <h3 class="cart_title">
                                        <a href="#">
                                            @item.Name
                                        </a>
                                    </h3>
                                    @*                                         <div class="cart_content">
                                    <div><span>بیمه </span><span class="item_property">پارسیان</span></div>
                                    <span class="cart_divider"></span>
                                    <div><span>رنگ </span><span class="item_property">مشکی</span></div>
                                    </div> *@
                                </td>
                                <td>
                                    <div class="cart_price">
                                        <ins><span>@item.Price<span>تومان</span></span></ins>
                                    </div>
                                </td>
                                <td>
                                    <input type="number" class="tedad" value="@item.Count" onchange="changeCartItemCount('@item.Id', 'totalItemPrice-@item.Id', this.value)">
                                </td>
                                <td class="price_alltd" id="totalItemPrice-@item.Id">@item.TotalItemPrice.ToMoney()<span>تومان</span></td>

                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="cart-page-content col-xl-12 col-lg-12 col-md-12">
                <div class="row cart_details">

                    <div class="cart-page-content col-xl-8 col-lg-7 col-md-7 ">
                        <input type="text" placeholder="کد تخفیف" class="input_second input_all width-200">
                        <a href="#" class="btn btn-main-masai"> اعمال</a>
                        <a href="#" class="btn btn-second-masai">به روز رسانی</a>
                        <div class="text_details">
                            <p>
                                ارسال رایگان برای سفارش‌های بالای 1 میلیون و 400 هزار تومان
                            </p>
                            <p>
                                افزودن کالا به سبد خرید به معنی رزرو آن نیست با توجه به محدودیت موجودی سبد خود را ثبت و خرید را تکمیل کنید.
                            </p>
                        </div>
                    </div>
                    <div class="cart-page-aside col-xl-4 col-lg-5 col-md-5 divider_details">
                        <table class="table table_details">
                            <tbody>
                            <tr>
                                <td>قیمت کل سفارش:</td>
                                <td>5,398,000 <span>تومان</span></td>
                            </tr>
                            <tr>
                                <td>بسته‌بندی و ارسال:</td>
                                <td>وابسته به نوع ارسال</td>
                            </tr>
                            <tr class="all">
                                <td>قیمت قابل پرداخت:</td>
                                <td>5,398,000 <span>تومان</span></td>
                            </tr>
                            <tr>
                                    <td colspan="2"><a asp-page-handler="GotoCheckOut" class="btn big_btn btn-main-masai"> گام بعدی</a></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

</main>
@section Script
{
    <script>
        function changeCartItemCount(id, totalPriceId, count) {
            var products = $.cookie(cookieName);
            products = JSON.parse(products);
            const productItem = products.findIndex(x => x.id == id);
            products[productItem].count = count;
            const product = products[productItem];
            const newPrice = parseInt(product.price) * parseInt(count);
            $(`#${totalPriceId}`).html(newPrice + '<span>تومان</span>');
            $.cookie(cookieName, JSON.stringify(products), { expires: 2, path: "/" });
            updateCart();
        }
    </script>
}
